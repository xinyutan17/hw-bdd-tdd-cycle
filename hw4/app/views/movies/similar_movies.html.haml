-#  This file is app/views/movies/similar_movies.html.haml
%h1 Similar Movies

%table#movies
  %tbody
    - @similar_movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)
